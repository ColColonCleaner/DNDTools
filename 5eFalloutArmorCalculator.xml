<Defaults>
    <ToggleButton fontSize="23"
                  fontStyle="Bold"
          	      colors="rgb(0.9,0.9,0.9)|rgb(0.7,0.7,0.7)|rgb(0.5,0.5,0.5)|rgb(1,1,1)"
                  onValueChanged="updateIsOn"/>
    <Dropdown onValueChanged="updateText"
              fontSize="12"
              fontStyle="Bold"/>
    <ToggleGroup allowSwitchOff="true"/>
    <InputField onEndEdit="updateText"
                characterValidation="Integer"
                fontSize="30"
                fontStyle="Bold"/>
    <Panel rotation="0 0 180"
           scale="0.5 0.5 0.5"/>
</Defaults>

<!-- DEX -->
<Panel position="133 -146 -12.5">
      <TableLayout width="250" height="100">
      <!-- Row 1 -->
      <Row>
          <Cell><Text fontSize="25"
                      fontStyle="Bold">Dex Mod</Text></Cell>
          <Cell><Text fontSize="25"
                      fontStyle="Bold">AC Bonus</Text></Cell>
      </Row>
      <!-- Row 2 -->
      <Row>
          <Cell><InputField id="xml_if_dex_mod"
                            characterLimit="4"
                            placeholder="" width="100"></InputField></Cell>
          <Cell><InputField id="xml_if_ac_bonus"
                            characterLimit="4"
                            placeholder="" width="100"></InputField></Cell>
      </Row>
    </TableLayout>
</Panel>

